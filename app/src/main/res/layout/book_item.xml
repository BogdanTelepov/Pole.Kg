<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="15dp"
    android:background="@color/backgroundColor"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardPreventCornerOverlap="true"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp">
                <ImageView
                    android:id="@+id/book_list_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/placeholder_image"
                    android:background="@color/greenPrimary"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_list_playground_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/blackColor1"
                    android:textSize="18sp"
                    android:text="@string/stadium"/>
                <TextView
                    android:id="@+id/book_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/usual_text"
                    android:layout_marginTop="6dp"
                    android:text="28.09.2020"/>

                <TextView
                    android:id="@+id/book_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/usual_text"
                    android:layout_marginTop="6dp"
                    android:text="20:00 - 22:00"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/book_list_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_book"
            android:textAllCaps="false"
            android:textColor="@color/greenPrimary"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_stroke_green"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>